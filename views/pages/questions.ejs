        <title>Create Survey Project</title>
        
        <style >
            body{
                background-color: aquamarine;
            }
            .container {
                /* margin-top: 100px; */
                
            }

            .holder{
                margin-top: 50px;
                margin-right: auto;
                margin-left: auto;
            }
             
            #r1{
                background-color: whitesmoke;
                /* border-style: groove; */
                width: 300px;
                float: left;
                margin: .05%;
                height: 450px;
            }

            #r2{
                background-color: cadetblue;
                /* border-style: ridge; */
                width: 320px;
                float: left;
                margin: .05%;
                margin-top: 20px;
                height: 450px;
            }

            #r3{
                background-color: whitesmoke;
                /* border-style: groove; */
                width: 700px;
                float: left;
                margin-left: 5;
                height: 500px;
                font-size: 14px;
                margin-top: 20px;
            }
            
        </style>
        
